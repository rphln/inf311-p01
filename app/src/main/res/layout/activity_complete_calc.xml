<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompleteCalc">

    <Button
        android:id="@+id/button23"
        android:layout_width="0dp"
        android:layout_height="@dimen/form_item_margin"
        android:layout_marginTop="@dimen/input_label_margin"
        android:onClick="appendNumber"
        android:tag="0"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/button16"
        app:layout_constraintStart_toStartOf="@+id/button17"
        app:layout_constraintTop_toBottomOf="@+id/button17" />

    <Button
        android:id="@+id/button21"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:onClick="appendOperator"
        android:tag="+"
        android:text="\u002B"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/button15"
        app:layout_constraintStart_toStartOf="@+id/button15"
        app:layout_constraintTop_toTopOf="@+id/button22" />

    <Button
        android:id="@+id/button22"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:onClick="appendNumber"
        android:tag="."
        android:text="."
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/button18"
        app:layout_constraintStart_toStartOf="@+id/button18"
        app:layout_constraintTop_toTopOf="@+id/button23" />

    <Button
        android:id="@+id/button17"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:layout_marginTop="@dimen/input_label_margin"
        android:onClick="appendNumber"
        android:tag="1"
        android:text="1"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/button16"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/button15"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:onClick="appendOperator"
        android:tag="\u2212"
        android:text="\u2212"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/button19"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button18"
        app:layout_constraintTop_toTopOf="@+id/button18" />

    <Button
        android:id="@+id/button16"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:onClick="appendNumber"
        android:tag="2"
        android:text="2"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/button18"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button17"
        app:layout_constraintTop_toTopOf="@+id/button17" />

    <Button
        android:id="@+id/button19"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="0dp"
        android:onClick="equal"
        android:tag="="
        android:text="="
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/button21"
        app:layout_constraintEnd_toEndOf="@+id/button12"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button15"
        app:layout_constraintTop_toTopOf="@+id/button15" />

    <Button
        android:id="@+id/button18"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:onClick="appendNumber"
        android:tag="3"
        android:text="3"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/button15"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button16"
        app:layout_constraintTop_toTopOf="@+id/button16" />

    <EditText
        android:id="@+id/visor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_item_margin"
        android:editable="false"
        android:ems="15"
        android:importantForAutofill="no"
        android:inputType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:onClick="appendNumber"
        android:tag="7"
        android:text="7"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/visor"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:onClick="appendNumber"
        android:tag="9"
        android:text="9"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button6" />

    <Button
        android:id="@+id/button7"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:layout_marginTop="@dimen/form_item_margin"
        android:onClick="backspace"
        android:tag="backspace"
        android:text="\u232B"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/visor"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/visor" />

    <Button
        android:id="@+id/button6"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:onClick="appendOperator"
        android:tag="\u00F7"
        android:text="\u00F7"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toTopOf="@+id/button7" />

    <Button
        android:id="@+id/button4"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:onClick="appendNumber"
        android:tag="8"
        android:text="8"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button5" />

    <Button
        android:id="@+id/button8"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:layout_marginTop="@dimen/input_label_margin"
        android:onClick="appendNumber"
        android:tag="4"
        android:text="4"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/button9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button9"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:onClick="appendNumber"
        android:tag="5"
        android:text="5"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/button10"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toTopOf="@+id/button8" />

    <Button
        android:id="@+id/button10"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:onClick="appendNumber"
        android:tag="6"
        android:text="6"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/button11"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toTopOf="@+id/button9" />

    <Button
        android:id="@+id/button11"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:onClick="appendOperator"
        android:tag="\u00D7"
        android:text="\u00D7"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/button12"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button10"
        app:layout_constraintTop_toTopOf="@+id/button10" />

    <Button
        android:id="@+id/button12"
        android:layout_width="@dimen/form_item_margin"
        android:layout_height="@dimen/form_item_margin"
        android:onClick="clear"
        android:tag="clear"
        android:text="C"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/button7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button11"
        app:layout_constraintTop_toTopOf="@+id/button11" />

</androidx.constraintlayout.widget.ConstraintLayout>